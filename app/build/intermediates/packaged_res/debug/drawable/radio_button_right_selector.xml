<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <stroke android:color="@color/tint_tertiary"/>
            <corners android:topRightRadius="10dp" android:bottomRightRadius="10dp"/>
            <solid android:color="@color/tint_tertiary"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke android:color="@color/tint_tertiary" android:width="1dp"/>
            <corners android:topRightRadius="10dp" android:bottomRightRadius="10dp"/>
            <solid android:color="@color/white"/>
        </shape>
    </item>
</selector>