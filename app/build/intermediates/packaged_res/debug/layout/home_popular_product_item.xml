<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="@dimen/_10sdp"
    android:layout_marginVertical="@dimen/_5sdp"
    >
    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/_140sdp"
        android:layout_height="@dimen/_180sdp"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/white"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/border_product"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_marginVertical="@dimen/_5sdp"
                android:id="@+id/imageProduct"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_130sdp"
                android:src="@drawable/ic_launcher_background"
                android:scaleType="fitCenter"
                android:layout_centerHorizontal="true"

                />
            <View

                android:layout_below="@id/imageProduct"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/tint_tertiary"
                />
            <TextView
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_below="@id/imageProduct"
                android:id="@+id/nameProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="IPhone 14 ProMax"
                android:textSize="@dimen/_13sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_below="@id/nameProduct"
                android:id="@+id/priceProduct"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="45.000.000Đ"
                android:textSize="@dimen/_13sdp"
                android:ellipsize="end"
                android:gravity="center"
                android:textColor="@color/red"

                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>